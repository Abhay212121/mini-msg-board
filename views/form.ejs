<html>
  <head>
    <title>Message App</title>
    <link
      rel="stylesheet"
      href="/styles/styles.css"
    />
    <link
      rel="preconnect"
      href="https://fonts.googleapis.com"
    />
    <link
      rel="preconnect"
      href="https://fonts.gstatic.com"
      crossorigin
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Coiny&family=Patrick+Hand&family=Patrick+Hand+SC&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <%- include('header.ejs') %>
    <div class="flex justify-center">
      <form
        method="POST"
        action="/new"
        class="flex border-4 mt-[10vh] py-10 text-2xl w-[30vw] items-center flex-col gap-6"
      >
        <h1 class="font-body text-4xl underline">Enter your Message!</h1>
        <input
          type="text"
          placeholder="Enter UserName"
          name="userName"
          class="border py-1 px-2 w-[80%] font-data"
        />
        <textarea
          type="text"
          placeholder="whats on your mind?..."
          name="userMessage"
          class="border p-2 w-[80%] h-32 resize-none font-data"
        ></textarea>
        <input
          type="submit"
          value="Submit"
          class="border-2 p-2 w-[80%] rounded-lg cursor-pointer hover:bg-amber-200 hover:underline transition duration-300"
        />
      </form>
    </div>
  </body>
</html>
